@model WardrobeMVC.Models.Top

@{
    ViewBag.Title = "Details";
}

@*you completely replaced the boilerplate code here*@

<h2>
    @Html.DisplayFor(model => model.TopName)
</h2>

<div>
    @*<h4>Top</h4>*@
    <hr />

    <div class="row">
        <div class="col-md-3 detailText">

            @Html.DisplayFor(model => model.Color) @Html.DisplayFor(model => model.Style) @Html.DisplayFor(model => model.Type)
        </div>
        <div class="col-md-6 detailText">

            <img class="clothingInDetail" src=@Url.Content(Model.Photo) class="img-responsive">
        </div>

        <div class="col-md-3 detailText">
            Recommended for: @Html.DisplayFor(model => model.Occasion)
        </div>
    </div>
</div>

<p class="followMe">
    @Html.ActionLink("Edit", "Edit", new { id = Model.TopID }) |
    @Html.ActionLink("Back to All Tops", "Index")
</p>
 