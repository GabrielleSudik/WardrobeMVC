@model IEnumerable<WardrobeMVC.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Outrageous Outfits!</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OutfitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Top.TopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bottom.TopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foot.ShoeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory.AccessoryName)
        </th>




        <th></th>
    </tr>

    @*below, you added the second line to (hopefully) include photos. WORKS.*@

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OutfitName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Top.TopName)
            <img id="clothingInList" src=@Url.Content(item.Top.Photo) class="img-responsive">

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bottom.TopName)
            <img id="clothingInList" src=@Url.Content(item.Bottom.Photo) class="img-responsive">

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Foot.ShoeName)
            <img id="clothingInList" src=@Url.Content(item.Foot.Photo) class="img-responsive">

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory.AccessoryName)
            <img id="clothingInList" src=@Url.Content(item.Accessory.Photo) class="img-responsive">

        </td>


        @*try to put edit details delete on separate lines in that table item*@

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutfitID }) <br/>
            @Html.ActionLink("Details", "Details", new { id=item.OutfitID }) <br />
            @Html.ActionLink("Delete", "Delete", new { id=item.OutfitID })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Build and save your own outfits", "Create")
</p>